{
  "name": "CrossWatch",
  "version": "1.0",
  "description": "Synchronize videos across various streaming services",
  "background": {
    "scripts": [
      "socket.io.js",
      "common.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://static.crunchyroll.com/*",
        "*://www.wakanim.tv/*",
        "*://www.funimation.com/*"
      ],
      "js": [
        "common.js",
        "content_script.js"
      ],
      "css": [
        "chatstyles.css"
      ]
    }
  ],
  "web_accessible_resources": ["imgs/chatIcon.png"],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeContent",
    "*://www.crunchyroll.com/*",
    "*://static.crunchyroll.com/*",
    "*://www.wakanim.tv/*",
    "*://www.funimation.com/*"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
